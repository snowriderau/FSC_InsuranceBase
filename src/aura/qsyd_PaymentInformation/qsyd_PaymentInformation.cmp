        </lightning:layoutItem>
        <lightning:layoutItem size="12" mediumDeviceSize="6">
            <div class="slds-m-horizontal_large">
                <lightning:input class="slds-m-vertical_small" aura:id="cardnumber" label="Card number" maxlength="16" value="{!v.cardNumber}" onchange="{!c.onNumberChange}" onfocus="{!c.flipToFront}" />
                <lightning:input class="slds-m-vertical_small" label="Valid Until" placeholder="MM / YY" value="{!v.validUntil}" onchange="{!c.onDateChange}" onfocus="{!c.flipToFront}" />
                <lightning:input class="slds-m-vertical_small" label="CVV" maxlength="4" pattern="\d*" value="{!v.cvv}" onchange="{!c.onCVVChange}" onfocus="{!c.flipToBack}" />
                <lightning:input class="slds-m-vertical_small" label="Card holder" value="{!v.cardHolder}" onchange="{!c.onNameChange}" onfocus="{!c.flipToFront}" />
            </div>
        </lightning:layoutItem>
    </lightning:layout>

    <div aura:id="actionButtonBar" class="slds-clearfix slds-p-top_large actionButtonBar slds-m-horizontal_small">
        <!-- If Previous is available, display to the left -->
        <div class="slds-float_left">
            <aura:if isTrue="{!v.canBack}">
                <lightning:button class="slds-m-right_x-small" aura:id="BACK" label="Previous"
                                  variant="neutral" onclick="{!c.onButtonPressed}" />
            </aura:if>
        </div>
        <div class="slds-float_right">
            <!-- If Pause, Next, or Finish are available, display to the right -->
            <aura:if isTrue="{!v.canPause}">
                <lightning:button aura:id="PAUSE" label="Pause"
                                  variant="neutral" onclick="{!c.onButtonPressed}" />
            </aura:if>
            <aura:if isTrue="{!v.canNext}">
                <lightning:button disabled="{!or(v.disabled, empty(v.cardNumber), empty(v.cvv), empty(v.validUntil), empty(v.cardHolder))}" aura:id="NEXT" label="Proceed" 
                                  variant="brand" onclick="{!c.onButtonPressed}" />
            </aura:if>
            <aura:if isTrue="{!v.canFinish}">
                <lightning:button disabled="{!or(v.disabled, empty(v.cardNumber), empty(v.cvv), empty(v.validUntil), empty(v.cardHolder))}" aura:id="FINISH" label="Proceed"
                                  variant="brand" onclick="{!c.onButtonPressed}" />
            </aura:if>
        </div>
    </div>
</aura:component>