<aura:component implements="lightning:availableForFlowScreens" access="global">
    <aura:attribute name="cardNumber"       type="String" />
    <aura:attribute name="cvv"              type="String" />
    <aura:attribute name="validUntil"       type="String" default="01/23" />
    <aura:attribute name="cardHolder"       type="String" />
    <aura:attribute name="paymentProcessed" type="Boolean" />
    <aura:attribute name="totalAmount"      type="String" />
    
    <aura:attribute name="canPause"   type="Boolean" />
    <aura:attribute name="canBack"    type="Boolean" />
    <aura:attribute name="canNext"    type="Boolean" />
    <aura:attribute name="canFinish"  type="Boolean" />
    
    <aura:attribute name="disabled"   type="Boolean" default="false" />
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    
    <lightning:spinner variant="brand" aura:id="mySpinner" class="slds-hide" />
    
